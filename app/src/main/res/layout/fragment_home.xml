<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:layout_marginTop="20dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_IMG_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        app:srcCompat="@drawable/ic_launcher_foreground"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_TV_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/home_IMG_user"
        android:layout_alignBottom="@+id/home_IMG_user"
        android:layout_marginStart="6dp"
        android:textSize="24sp" />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/home_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:backgroundTint="#00000000" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_LST_groups"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_LL_toolbar"
        tools:listitem="@layout/group_item" />

    <LinearLayout
        android:id="@+id/home_LL_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_TV_hello"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:background="@color/transparent"
            android:layout_marginTop="5dp"/>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/home_ET_search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Search a group"
            android:textAlignment="center"/>
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_filter"
            android:background="@color/transparent"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</RelativeLayout>