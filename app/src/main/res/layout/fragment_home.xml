<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/home_IMG_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/home_LST_groups"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_launcher_foreground"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/home_TV_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/home_IMG_user"
        android:layout_alignBottom="@+id/home_IMG_user"
        android:layout_marginStart="6dp"
        android:text="Hello, Adam"
        android:textSize="24sp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_LST_groups"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home_TV_hello"
        tools:listitem="@layout/group_item"/>
</RelativeLayout>