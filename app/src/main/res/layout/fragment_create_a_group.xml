<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.create_a_group.CreateAGroupFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/create_IMG_groupIMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_IMG_groupIMG">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_ET_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:hint="@string/name"
            android:textAlignment="center"
            android:textColorHint="@color/grey"
            android:layout_marginTop="10dp"
            />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/create_SP_region"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:entries="@array/Region"
            android:dropDownWidth="250dp"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/create_SP_skill"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:entries="@array/Skill"
            android:dropDownWidth="250dp"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/create_SP_platform"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:entries="@array/Platform"
            android:dropDownWidth="250dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_TF_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            app:hintTextColor="@color/grey"
            android:layout_marginTop="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:inputType="text"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

