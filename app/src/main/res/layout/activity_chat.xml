<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:background="#274F97">


    <View
        android:id="@+id/chat_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_content"
        android:layout_alignBottom="@id/chat_LST_chatLst"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/chat_BTN_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_back"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/chat_TV_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="Test"
        android:textSize="20sp"
        android:layout_alignBottom="@id/chat_BTN_back"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_LST_chatLst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chat_LL_msg"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/chat_BTN_back"
        android:orientation="vertical"
        android:padding="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    <LinearLayout
        android:id="@+id/chat_LL_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/chat_ET_msgInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/type_a_message"
            android:background="@drawable/background_chat_input"
            android:layout_weight="100"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:paddingStart="20dp"
            android:elevation="5dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/chat_FAB_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:icon="@drawable/ic_send"
            android:layout_alignBaseline="@id/chat_ET_msgInput"
            android:layout_toEndOf="@id/chat_ET_msgInput"
            android:layout_marginStart="10dp"
            app:iconTint="@color/white"
            android:backgroundTint="#FF14336D"
            />
    </LinearLayout>


</RelativeLayout>